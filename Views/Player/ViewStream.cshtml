@model Stream

@{
    ViewData["Title"] = Model.Collection.Name;

    ViewData["Title:Nav"] = Model.Collection.Name;
    ViewData["Color:Nav"] = Model.Collection.DarkColor;
    ViewData["Color:Base"] = Model.Collection.BaseColor;
    ViewData["Color:Accent"] = Model.Collection.LightColor;
    ViewData["Page:Align"] = "center";
}

<div id="player"></div>

@section Scripts {
    @inject Microsoft.Extensions.Configuration.IConfiguration Configuration

    @await Html.PartialAsync("_OvenPlayerStartup", new OvenPlayerConfiguration(Configuration)
    {
        StreamKey = Model.StreamKey
    })
}

@section Navbar {
    @{
        if (Model.Collection.ShowHowTo == true)
        {
            <li class="nav-item">
                <a class="nav-btn nav-link nav-link-icon btn btn-outline-secondary" href="#">
                    <i class="far fa-gamepad-alt"></i>
                    <span class="nav-link-inner--text">How to Play</span>
                </a>
            </li>
        }
    }

    @{
        if (Model.Collection.CallLink != null)
        {
            <li class="nav-item">
                <a class="nav-btn nav-link nav-link-icon btn btn-primary" href="@Model.Collection.CallLink" target="_blank">
                    <i class="far fa-headset"></i>
                    <span class="nav-link-inner--text">Join Call</span>
                </a>
            </li>
        }
    }

}