@{
    Layout = "_Layout";
    ViewData["Title"] = "Error";
    ViewData["Page:Align"] = "center";
}

<div class="card bg-default text-secondary border-0 card-error w-75 h-50 align-self-center">
    <div class="card-body d-flex flex-0-auto justify-content-center align-items-center">
        <div class="mr-4 error-icon text-@ViewData["Color"]">
            <i class="@ViewData["Icon"]"></i>
        </div>
        <div class="error-text">
            @ViewData["Message"]
        </div>
    </div>
</div>
