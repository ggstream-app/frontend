@model IEnumerable<GGStream.Models.Stream>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{ 
    if(ViewData["DisableCreate"] == null || (bool)ViewData["DisableCreate"] != true)
    {
        <p>
            <a asp-action="Create" asp-route-url="@(ViewContext.RouteData.Values["url"])">Create New</a>
        </p>
    }
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Private)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.ID)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Private)
            </td>
            <td>
                <a asp-action="Edit" asp-route-url="@item.CollectionURL" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-url="@item.CollectionURL" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-url="@item.CollectionURL" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
